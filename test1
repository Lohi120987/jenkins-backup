pipeline {
    agent none
    stages{
        stage('build') {
            agent { label 'default label' }
            steps {
                echo " this is build stage "
                sh " sleep 5 "
    }
}
        stage('deploy') {
            agent { label 'c-project' }
            steps {
                echo " this is deploy stage "
                sh " sleep 5 "
    }
}
        stage('test') {
            agent any
            steps {
                echo " this is test stage "
                sh " sleep 5 "
            }
        }
    }
}
